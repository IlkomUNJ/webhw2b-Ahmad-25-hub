<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Upload Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
  @vite(['resources/css/comercial.css', 'resources/css/s.css'])
  @vite('resources/js/upload_product.js')
</head>
<body class="bg-black text-green-100 antialiased">
    @include('pages/partials/navbar_buyer')
  <div class="max-w-lg mx-auto mt-[100px] bg-[#111] rounded-2xl shadow-lg shadow-green-700/40 p-8 mb-16">
    <h1 class="text-2xl font-bold text-center mb-6 text-green-400">Upload Produk</h1>

    <!-- Form Upload -->
    <form id="uploadForm" class="space-y-5">

      <!-- Nama Produk -->
      <div>
        <label class="block mb-2 text-sm font-semibold">Nama Produk</label>
        <input type="text" id="nama" required
          class="w-full px-3 py-2 rounded-lg bg-gray-800 text-white border border-green-600 focus:ring-2 focus:ring-green-500 outline-none">
      </div>

      <!-- Harga Produk -->
      <div>
        <label class="block mb-2 text-sm font-semibold">Harga Produk (Rp)</label>
        <input type="number" id="harga" required
          class="w-full px-3 py-2 rounded-lg bg-gray-800 text-white border border-green-600 focus:ring-2 focus:ring-green-500 outline-none">
      </div>

      <!-- Deskripsi Produk -->
      <div>
        <label class="block mb-2 text-sm font-semibold">Deskripsi Produk</label>
        <textarea id="deskripsi" rows="4" required
          class="w-full px-3 py-2 rounded-lg bg-gray-800 text-white border border-green-600 focus:ring-2 focus:ring-green-500 outline-none"></textarea>
      </div>

      <!-- Gambar Produk -->
      <div>
        <label class="block mb-2 text-sm font-semibold">Gambar Produk</label>
        <input type="file" id="gambar"accept=".jpg,.jpeg,.png" required
          class="block w-full text-sm text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg
          file:border-0 file:text-sm file:font-semibold file:bg-green-700 file:text-white
          hover:file:bg-green-600 cursor-pointer">
      </div>

      <!-- Tombol Upload -->
      <button type="submit"
        class="w-full bg-green-600 text-black font-semibold py-2 rounded-lg hover:bg-green-500 transition-all">
        Upload Produk
      </button>

    </form>

    <!-- Pesan Berhasil -->
    <p id="pesan" class="text-center text-green-400 mt-5 hidden">
      âœ… Produk berhasil diupload!
    </p>
  </div>
</body>
</html>
