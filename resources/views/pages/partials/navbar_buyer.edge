<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  @vite('resources/css/comercial.css')
  @vite('resources/js/app.js')
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    :root {
      --neon: #39ff14; /* neon green */
      --muted-neon: rgba(57,255,20,0.10);
      --bg-dark: #07100c;
    }
    .neon-text { text-shadow: 0 0 8px rgba(57,255,20,0.18); }
    .neon-ring:focus { box-shadow: 0 0 12px rgba(57,255,20,0.18); }
  </style>
</head>
<body class="bg-[color:var(--bg-dark)] text-slate-200 antialiased ">

  <!-- NAVBAR -->
  <header class="fixed top-0 left-0 right-0 z-50 border-b border-slate-800 bg-[color:var(--bg-dark)]/95 backdrop-blur-md">
    <nav class="max-w-7xl mx-auto px-8">
      <div class="flex items-center justify-between h-20">
        
        <!-- Left -->
        <div class="flex items-center gap-8">
          <a href="#" class="flex items-center gap-3" aria-label="clarity labs">
            <div class="w-12 h-12 rounded-lg bg-[color:var(--bg-dark)]/95 flex items-center justify-center ">
              <img src="/resources/assets/logo.png" class="logo-img" alt="logo">
            </div>
            <span class="font-semibold text-2xl neon-text text-white">Clarity Labs</span>
          </a>

          <ul class="flex items-center gap-4 text-sm text-slate-300">
            <li><a href="/about" class="px-3 py-2 rounded-md hover:bg-[var(--muted-neon)]">About</a></li>
            <li><a href="/contact" class="px-3 py-2 rounded-md hover:bg-[var(--muted-neon)]">Contact Us</a></li>

            <!-- CART -->
            <li class="relative">
              <a href="/cart" class="px-3 py-2 rounded-md hover:bg-[var(--muted-neon)] flex items-center gap-2">
                <span>Cart</span>
              </a>
              <span id="cartCount" class="absolute -top-1 -right-2 bg-green-500 text-black text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center shadow-md">
                0
              </span>
            </li>

            <!-- Auth button -->
            <li><a id="authButton" href="/login" class="px-3 py-2 rounded-md hover:bg-[var(--muted-neon)]">Login</a></li>
          </ul>
        </div>

        <!-- Center: Search -->
        <div class="flex-1 px-12">
          <div class="max-w-3xl mx-auto relative">
            <label for="search" class="sr-only">Cari produk</label>
            <div class="flex items-center gap-3 bg-[#0b1814] rounded-lg p-2 ring-1 ring-[rgba(57,255,20,0.06)]">
              <div class="pl-3 pr-1">
                <svg class="w-5 h-5 text-slate-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 1 0 0-15 7.5 7.5 0 0 0 0 15z" />
                </svg>
              </div>
              <input id="search" autocomplete="off" class="w-full bg-transparent outline-none text-sm placeholder:text-slate-500 text-slate-100 px-3 py-2 neon-text" placeholder="Cari produk, brand, atau kategori..." />
              <a href = "/search" id="searchBtn" class="ml-2 inline-flex items-center gap-2 px-4 py-2 rounded-md bg-green-500 text-black font-medium hover:brightness-95">Cari</a>
            </div>
            <div id="suggestions" class="hidden absolute left-0 right-0 mt-2 bg-[#071714] border border-slate-800 rounded-lg shadow-lg overflow-hidden z-40">
              <ul class="divide-y divide-slate-800"></ul>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>


  <!-- SCRIPT -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const authButton = document.getElementById("authButton");
      const user = JSON.parse(localStorage.getItem("user"));

      if (user) {
        // Jika user sudah login
        authButton.textContent = "Logout";
        authButton.href = "#";
        authButton.addEventListener("click", (e) => {
          e.preventDefault();
          localStorage.removeItem("user");
          alert("Logout berhasil!");
          window.location.reload();
        });
      } else {
        // Jika belum login (default)
        authButton.textContent = "Login";
        authButton.href = "/login";
      }
    });
  </script>
</body>
</html>
